@model IEnumerable<TaskVersta.Models.Order>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">
                Список заказов
            </h2>
        </div>
        <div class="col-6 text-end">
            <a asp-action="Insert" class="btn btn-primary">
                <i class="fa-solid fa-plus"></i> &nbsp; Создать новый заказ
            </a>
        </div>
    </div>

    <br /> <br />

    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width: 100%">
            <thead>
                <tr>
                    <th>
                        Номер заказа
                    </th>
                    <th>
                        Город отправителя
                    </th>
                    <th>
                        Адрес отправителя
                    </th>
                    <th>
                        Город получателя
                    </th>
                    <th>
                        Адрес получателя
                    </th>
                    <th>
                        Вес груза
                    </th>
                    <th>
                        Дата забора груза
                    </th>
                    <th>
                        Действия
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var obj in Model)
                {
                    <tr>
                        <td>
                            @obj.Id
                        </td>
                        <td>
                            @obj.SenderCity
                        </td>
                        <td>
                            @obj.SenderAddress
                        </td>
                        <td>
                            @obj.RecipientCity
                        </td>
                        <td>
                            @obj.RecipientAddress
                        </td>
                        <td>
                            @obj.CargoWeight
                        </td>
                        <td>
                            @obj.DateCargoPickup
                        </td>
                        <td class="text-center">
                            <div class="btn-group" role="group">
                                <a asp-route-Id="@obj.Id" asp-action="Details" class="btn btn-info mx-2">
                                    <i class="fa fa-info-circle"></i>
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>Заказы отсутствуют</p>
    }
</div>