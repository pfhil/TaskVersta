@model TaskVersta.Models.Order

<form method="post">
    <div class="border p-3">
        <div class="form-group row">
            <h2 class="text-info pl-3">
                Добавить заказ
            </h2>
        </div>
        <div class="row">
            <div class="col-8">

                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="SenderCity"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="SenderCity" class="form-control" />
                        <span asp-validation-for="SenderCity" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="SenderAddress"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="SenderAddress" class="form-control" />
                        <span asp-validation-for="SenderAddress" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="RecipientCity"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="RecipientCity" class="form-control" />
                        <span asp-validation-for="RecipientCity" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="RecipientAddress"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="RecipientAddress" class="form-control" />
                        <span asp-validation-for="RecipientAddress" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="CargoWeight"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="CargoWeight" class="form-control" />
                        <span asp-validation-for="CargoWeight" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="DateCargoPickup"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="DateCargoPickup" class="form-control" />
                        <span asp-validation-for="DateCargoPickup" class="text-danger"></span>
                    </div>
                </div>
                
                <div class="form-group row">
                    <div class="col-8 offset-4 row">

                        <div class="col">
                            <input type="submit" class="btn btn-info w-100" value="Создать" />
                        </div>
                        <div class="col">
                            <a asp-action="Index" class="btn btn-success w-100">
                                <i class="fa-solid fa-right-from-bracket"></i> Назад
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}